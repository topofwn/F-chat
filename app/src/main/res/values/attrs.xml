<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyButton">
        <attr name="shadowEnabled" format="boolean" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowHeight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="buttonColor" format="color" />
        <attr name="buttonDisableColor" format="color" />
        <attr name="buttonPressedColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textPressedColor" format="color" />
        <attr name="buttonDrawable" format="reference" />
        <attr name="isSetSelected" format="boolean" />
        <attr name="buttonDrawableAlign" format="enum" >
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleButton">
        <attr name="color" format="color" />
        <attr name="pressedRingWidth" format="dimension" />
    </declare-styleable>  <attr name="images" format="reference"/>

    <declare-styleable name="MCButtonWithBadge">
        <attr name="mcbwb_src" format="reference" />
        <attr name="mcbwb_title" format="string"/>
        <attr name="mcbwb_hide_number" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <declare-styleable name="BootstrapProgressBar">
        <attr name="striped" format="boolean"/>
        <attr name="animated" format="boolean"/>
        <attr name="bootstrapProgress" format="integer"/>
        <attr name="bootstrapMaxProgress" format="integer"/>
        <attr name="roundedCorners" format="boolean"/>
        <attr name="bootstrapBrand"/>
        <attr name="bootstrapSize"/>
        <attr name="bootstrapDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <!--where view must be located in default state-->
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="right" value="1" />
            <enum name="center" value="0" />
        </attr>

        <!--Does view should been stick after touch up-->
        <attr name="sticky" format="dimension">
            <!--stick mode is off-->
            <enum name="none" value="-2" />
            <!--stick view if it has reached offset equals to its width-->
            <enum name="self" value="-1" />
        </attr>
        <attr name="sticky_sensitivity" format="float" />

        <!--the maximum offset that view can be moved-->
        <attr name="clamp" format="dimension">
            <enum name="parent" value="-1" />
            <enum name="self" value="-2" />
        </attr>

        <!--move view to clamp if the offset reached this value-->
        <attr name="bring_to_clamp" format="dimension">
            <enum name="no" value="-1"/>
        </attr>

        <!--enable or disable swipe gestures -->
        <attr name="swipe_enabled" format="boolean"/>

        <!--enable or disable swipe gestures from left side-->
        <attr name="left_swipe_enabled" format="boolean"/>

        <!--enable or disable swipe gestures from right side-->
        <attr name="right_swipe_enabled" format="boolean"/>

    </declare-styleable>

</resources>